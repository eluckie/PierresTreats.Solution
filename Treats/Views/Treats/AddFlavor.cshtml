@{
  Layout = "_Layout";
}

@model Treats.Models.Treat
@using Treats.Models;

<div id="page-content">
  <div id="details">
    <h2>Select which flavor profiles to add for <span id="accent">@Model.Name</span></h2>
    <hr>
  </div>

  <form method="post">
    <table class="table" style="width: 200px;">
      @foreach (Flavor flavor in ViewBag.Flavors)
      {
        <tr>
          <td>@flavor.Description</td>
          <td><input name="flavors" type="checkbox" value="@flavor.FlavorId"></td>
        </tr>
      }
    </table>
    <input type="hidden" value="@Model.TreatId" name="treatId" id="treatId">
    <input type="submit" value="Add" id="blue-btn">
    <br><br>
    <h5>@Html.ActionLink("Cancel", "Details", new { id = Model.TreatId})</h5>
  </form>
</div>