@{
  Layout = "_Layout";
}

@model Treats.Models.Treat

<h2>Add a new treat</h2>

@using (Html.BeginForm())
{
  <p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
  @Html.LabelFor(model => model.Name)
  <br>
  @Html.TextBoxFor(model => model.Name)
  <br>
  <p>@Html.ValidationMessageFor(model => model.Ingredients, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
  @Html.LabelFor(model => model.Ingredients)
  <br>
  @Html.TextAreaFor(model => model.Ingredients, new { rows = "10" })
  <br><br>
  <input type="submit" value="Add Treat">
  <br><br>
  <p>@Html.ActionLink("Cancel", "Index")</p>
}