@{
  Layout = "_Layout";
}

@model Treats.Models.Treat

<div id="page-content">
  <h2>Add a new treat</h2>

  @using (Html.BeginForm())
  {
    <p>@Html.ValidationMessageFor(model => model.Name, "", new { @id = "accent", @style = "font-weight: 600;" })</p>
    @Html.LabelFor(model => model.Name)
    <br>
    @Html.TextBoxFor(model => model.Name)
    <br><br>
    <p>@Html.ValidationMessageFor(model => model.Ingredients, "", new { @id = "accent", @style = "font-weight: 600;" })</p>
    @Html.LabelFor(model => model.Ingredients)
    <br>
    @Html.TextAreaFor(model => model.Ingredients, new { rows = "10" })
    <br><br>
    <input type="submit" value="Add Treat" id="blue-btn">
    <br><br>
    <h5>@Html.ActionLink("Cancel", "Index")</h5>
  }
</div>