@{
  Layout = "_Layout";
}

@using Treats.Models

<h1>Welcome</h1>
@if (User.Identity.IsAuthenticated)
{
  <h2>@ViewBag.Nickname's Treats</h2>
  @if (Model.Count == 0)
  {
    <h3>No treats have been added to your list!</h3>
  }
  @foreach (Treat treat in Model)
  {
    <h3>@Html.ActionLink(@treat.Name, "Details", "Treats", new { id = @treat.TreatId })</h3>
  }
}
else
{
  <h3>Treats</h3>
  <p>You must @Html.ActionLink("login", "LogIn", "Account") to view or manage your treats</p>
}